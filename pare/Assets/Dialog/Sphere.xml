	<RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="0, 0, 0, 0" IsHitTestVisible="true" />

	<CanvasWidget Size="650, 400" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
		<RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />
		<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 15">

			<LabelWidget Name="Sphere" Text="Sphere" HorizontalAlignment="Center" Color="127,255,127" />


			<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" Margin="5, 0">
				<SliderWidget Name="XSlider" IsLabelVisible="false" Size="360, 50" Granularity="1" Value="1" MinValue="1" MaxValue="100" HorizontalAlignment="Center" Margin="10, 0" />
				<LabelWidget Name="XR" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10, 0" />
			</StackPanelWidget>


			<StackPanelWidget Name="ADVG" Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
				<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" Margin="5, 0">
					<SliderWidget Name="YSlider" IsLabelVisible="false" Size="360, 50" Granularity="1" Value="1" MinValue="1" MaxValue="100" HorizontalAlignment="Center" Margin="10, 0" />
					<LabelWidget Name="YR" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10, 0" />
				</StackPanelWidget>
				<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" Margin="5, 0">
					<SliderWidget Name="ZSlider" IsLabelVisible="false" Size="360, 50" Granularity="1" Value="1" MinValue="1" MaxValue="100" HorizontalAlignment="Center" Margin="10, 0" />
					<LabelWidget Name="ZR" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10, 0" />
				</StackPanelWidget>
			</StackPanelWidget>


			<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
				<BlockIconWidget Name="Block" Size="50, 50" VerticalAlignment="Center" HorizontalAlignment="Center" Contents="1" />
				<CanvasWidget Size="360, 50" VerticalAlignment="Center">
					<RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" />
					<TextBoxWidget Name="BlockID" Title="BlockID" Text="2" Size="360, 50" Description="" VerticalAlignment="Center" MaximumLength="16" Margin="10, 0" />
				</CanvasWidget>
				<BevelledButtonWidget Name="SelectBlock" Size="60, 50" Text="..." VerticalAlignment="Center" />
			</StackPanelWidget>

