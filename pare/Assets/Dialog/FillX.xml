<CanvasWidget xmlns="runtime-namespace:Game">

  <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="0, 0, 0, 0" IsHitTestVisible="true" />

  <CanvasWidget Size="600, 400" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10, 5">
      
	  <LabelWidget Text="Filling interface" HorizontalAlignment="Center" Color="127,255,127"/>
	  
      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
	    <BlockIconWidget Name="Block" Size="50, 50" VerticalAlignment="Center" HorizontalAlignment="Center" Contents="1" />
        <CanvasWidget Size="360, 50" VerticalAlignment="Center">
		  <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" />
          <TextBoxWidget Name="BlockID" Title="方块ID" Text="2" Size="360, 50" Description="" VerticalAlignment="Center" MaximumLength="16" Margin="10, 0"/>
        </CanvasWidget>
		<BevelledButtonWidget Name="SelectBlock" Size="60, 50"  Text="..." VerticalAlignment="Center"/>
      </StackPanelWidget>

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" Name="XYZ" Margin="5, 5">
	    <BevelledButtonWidget Name="X轴" Size="120, 50"  Text="X-axis"/>
	    <BevelledButtonWidget Name="Y轴" Size="120, 50"  Text="Y-axis"/>
        <BevelledButtonWidget Name="Z轴" Size="120, 50"  Text="Z-axis"/>
      </StackPanelWidget>

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" Margin="5, 5">
	    <BevelledButtonWidget Name="填充" Size="120, 50"  Text="Filling"/>
	    <BevelledButtonWidget Name="填充2" Size="120, 50"  Text="Fill 2"/>
        <BevelledButtonWidget Name="取消" Size="120, 50"  Text="Cancel"/>
      </StackPanelWidget>
	  
    </StackPanelWidget>
	
  </CanvasWidget>

</CanvasWidget>